# Stacks NFT Minter - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Stacks network to use: mainnet or testnet
VITE_STACKS_NETWORK=mainnet

# Hiro API URL (optional - defaults based on network)
# VITE_STACKS_API_URL=https://api.mainnet.hiro.so
# VITE_STACKS_API_URL=https://api.testnet.hiro.so

# =============================================================================
# CONTRACT CONFIGURATION
# =============================================================================

# Deployed NFT contract address
VITE_CONTRACT_ADDRESS=SP3FKNEZ86RG5RT7SZ5FBRGH85FZNG94ZH1MCGG6N

# Contract name
VITE_CONTRACT_NAME=stacks-nft-v2

# =============================================================================
# MINTING CONFIGURATION
# =============================================================================

# Mint price in STX
VITE_MINT_PRICE=0.1

# Maximum supply (0 for unlimited)
VITE_MAX_SUPPLY=0

# =============================================================================
# METADATA CONFIGURATION (Optional)
# =============================================================================

# Base URI for NFT metadata (IPFS or HTTP)
# VITE_METADATA_BASE_URI=ipfs://

# Pinata API keys for IPFS uploads (if using Pinata)
# VITE_PINATA_API_KEY=
# VITE_PINATA_SECRET_KEY=

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Application name
VITE_APP_NAME=Stacks NFT Minter

# App URL (for metadata)
VITE_APP_URL=https://your-domain.com

# Enable debug mode (shows extra logs in console)
VITE_DEBUG=false

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable testnet mode toggle in UI
VITE_ENABLE_NETWORK_SWITCH=true

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# Show transaction history
VITE_ENABLE_TX_HISTORY=true

# =============================================================================
# DEPLOYMENT (DO NOT COMMIT ACTUAL VALUES)
# =============================================================================

# Private keys for deployment scripts (never commit these!)
# STACKS_PRIVATE_KEY=your-private-key-here
# STACKS_TEST_PRIVATE_KEY=your-test-private-key-here